# Required (local dev or production)
DATABASE_URL="postgres://postgres:postgres@localhost:5432/council_market"

# Optional: TLS settings for Postgres.
# - If you see: "self-signed certificate in certificate chain", set rejectUnauthorized to false (or provide a CA cert).
# - `DATABASE_SSL_CA` can be a PEM string; `\\n` will be converted to newlines.
# DATABASE_SSL_REJECT_UNAUTHORIZED="false"
# DATABASE_SSL_CA="-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----"

# Invite tokens (any user vs admin user)
INVITE_TOKEN="replace-me"
ADMIN_INVITE_TOKEN="replace-me-too"

# Credits economy
MONTHLY_ALLOWANCE_CREDITS="100"
